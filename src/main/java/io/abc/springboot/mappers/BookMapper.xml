<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.abc.springboot.mappers.BookMapper">
    <insert id="addBook" parameterType="io.abc.springboot.models.Book">
        INSERT INTO book(name, author) VALUES (#{name}, #{author})
    </insert>

    <delete id="deleteBookById" parameterType="int">
        DELETE FROM book WHERE id=#{id}
    </delete>

    <update id="updateBookById" parameterType="io.abc.springboot.models.Book">
        UPDATE book SET name=#{name}, author=#{author} WHERE id=#{id}
    </update>

    <select id="getBookById" parameterType="int" resultType="io.abc.springboot.models.Book">
        SELECT * FROM book WHERE id=#{id}
    </select>

    <select id="getAllBooks" resultType="io.abc.springboot.models.Book">
        SELECT * FROM book
    </select>
</mapper>