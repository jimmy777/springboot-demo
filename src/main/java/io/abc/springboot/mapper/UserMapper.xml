<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.abc.springboot.mapper.UserMapper">
    <select id="loadUserByUsername" resultType="io.abc.springboot.model.User">
        select * from user where username=#{username}
    </select>
    <select id="getUserRolesByUid" parameterType="int" resultType="io.abc.springboot.model.Role">
        select * from role r ,user_role ur where r.id=ur.rid and ur.uid=#{id}
    </select>
</mapper>